<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 학생 이름 TextView (숨김 처리) -->
    <TextView
        android:id="@+id/studentNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="학생 이름"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone" />  <!-- 이름 TextView 숨김 처리 -->

    <!-- 학생 생일 TextView (숨김 처리) -->
    <TextView
        android:id="@+id/studentBirthdayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="생일: YYYY-MM-DD"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />  <!-- 생일 TextView 숨김 처리 -->

</LinearLayout>
